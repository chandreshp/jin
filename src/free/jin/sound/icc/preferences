# Chat patterns on which sounds are generated. The match is done against the 
# string "<type>.<forum>.<sender>\n" (without the <> of course), where <forum> 
# is an empty string if null, or otherwise theForum.toString().

num-chat-patterns = integer;4

chat-pattern-0 = string;^tell\\..*
chat-sound-0 = string;whistle.au

chat-pattern-1 = string;^say\\..*
chat-sound-1 = string;whistle.au

chat-pattern-2 = string;^atell\\..*
chat-sound-2 = string;alert.au

chat-pattern-3 = string;^channel-atell\\..*
chat-sound-3 = string;alert.au


# Text patterns on which sounds are generated. The match is done against the
# received text line.

num-text-patterns = integer;3

text-pattern-0 = string;^Notification: [-A-z]{2,15} has arrived\\.$
text-sound-0 = string;ding.au

text-pattern-1 = string;^Notification: [-A-z]{2,15} has departed\\.$
text-sound-1 = string;cork.au

text-pattern-2 = string;^Notification: [-A-z]{2,15} \\(with whom you have an adjourned game\\) has arrived\\.$
text-sound-2 = string;ding.au


OnLogin = string;welcome-icc.au
OnDisconnect = string;goodbye.au
Move = string;move-icc.au
Capture = string;capture-icc.au
Castling = string;castle-icc.au
Check = string;check.au
Checkmate = string;checkmate.au
DrawOffer = string;draw.au
AbortOffer = string;abort.au
AdjournOffer = string;adjourn.au
TakebackOffer = string;takeback.au
IllegalMove = string;buzzer.au
GameEnd = string;fitebell.au
GameStart = string;fitebell.au
FriendConnected = string;ding.au
FriendDisconnected = string;cork.au
